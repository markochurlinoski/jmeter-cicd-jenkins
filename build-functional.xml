<?xml version="1.0" encoding="iso-8859-1"?>
<project default="all" basedir=".">

	<property name="jmeter.home" value="D:\JMeter\apache-jmeter-4.0" />		
	<path id="ant.jmeter.classpath">
		<fileset dir="C:\apache-ant-1.9.14\lib" >
		<include name="ant-jmeter-1.1.1.jar"/>
	  </fileset>
	</path>
	<taskdef
    name="jmeter"
    classname="org.programmerplanet.ant.taskdefs.jmeter.JMeterTask"
    classpathref="ant.jmeter.classpath" />
	<target name="clean">
		<delete dir="results"/>
		<delete file="jmeter.log"/>
		<mkdir dir="results/jtl"/>
		<mkdir dir="results/html"/>
	</target>
	<target name="test" depends="clean">
		<jmeter
       jmeterhome="${jmeter.home}"
       resultlogdir="results/jtl">
			<testplans dir="${basedir}/tests" includes="APITestingSF.jmx"/>
			<property name="jmeter.save.saveservice.output_format" value="xml"/>
			<jvmarg value="-Xmx1536m"/>
		</jmeter>
	</target>
	<!-- This is not needed for the plugin, but it produces a nice html report
       which can be saved usin jenkins's archive artifact feature -->
	<target name="report" depends="test">
		<xslt
		classpathref="xslt.classpath"
       basedir="results/jtl"
       destdir="results/html"
       includes="*.jtl"
       style="${basedir}/jmeter-results-detail-report_21.xsdasdsal"/>
	</target>
	<target name="unit" depends="test">
    <xslt basedir="results/jtl" destdir="results/unit" includes="*.jtl" extension=".xml" style="${basedir}\jmeterUnitReport.xsl" />
	</target>
	<target name="all" depends="test, report"/>
</project>
